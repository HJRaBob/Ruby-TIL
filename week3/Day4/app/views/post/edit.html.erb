<h1 style="text-align:center">질문 수정</h1>
<form action="/update/<%=@post.id%>" method="post">
  <div class="form-group">
        <label for="exampleFormControlInput1">제목 :</label>
        <input type="text" name="title" value="<%=@post.title %>" class="form-control">
  </div>
    <div class="form-group">
        <label for="exampleFormControlTextarea1">내용 :</label>
        <textarea name="content" class="form-control" rows="5"><%=@post.content%></textarea>
    </div>
    <input type="hidden" name="authenticity_token" value= "<%=form_authenticity_token%>" >
    <input type="submit" value="저장" class="btn btn-outline-success">
    <a href="/" class="btn btn-outline-success">취소</a>
</form>
