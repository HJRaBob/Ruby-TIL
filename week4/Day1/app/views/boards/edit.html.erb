<form action="/boards/<%=@board.id%>" method='POST'>
    제목 : <input type="text" name="title" value=<%= @board.title %> class='form-control'> <br>
    내용 : <br><textarea name="contents" cols="45" rows="15" class='form-control'><%= @board.contents %></textarea><br>
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token%>">
    <input type="hidden" name="_method" value="PUT" class="btn btn-success">
    <input type="submit" value="저장" class="btn btn-success">
</form>